#!/usr/bin/ash

run_hook () {
	eval "$(echo "orig_fsck_device()"; declare -f fsck_device | tail -n +2)"
	fsck_device() {
		orig_fsck_device $1
		RET=$?
		if [ -n "$fsckret" ] && [ "$fsckret" -ne 255 ]; then
		        if bitfield_has_bit "$fsckret" 4; then
				fsck -a $1
				if [ "$?" == "0" ];then
					return 0;
				fi;
			fi;
		fi;
		return $RET
	}
}
